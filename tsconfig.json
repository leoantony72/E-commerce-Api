{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "outDir": "dist/"
  },
  "include": ["src/"],
  // ts-node doesn't seem to load .d.ts files https://stackoverflow.com/q/51610583
  "ts-node": {
    "files": true
  }
}
